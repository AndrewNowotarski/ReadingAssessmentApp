<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReadingApp.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Item.Name}" FontSize="Small"/>
        <Label Text="Assessed Grade Level:" FontSize="Medium" />
        <Label Text="{Binding Item.GradeLevel}" FontSize="Small"/>
        <Label Text="Grade:" FontSize="Medium"/>
        <Label Text="{Binding Item.Grade}" FontSize="Small"/>
    </StackLayout>
</ContentPage>